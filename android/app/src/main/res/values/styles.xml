<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Theme for Card Entry, combining all custom items into a single style definition. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customizations from the first block -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <!-- Customizations from the second block -->
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <!-- Custom style for EditText widgets -->
    <style name="CustomEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Custom style for Button widgets -->
    <style name="CustomButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>